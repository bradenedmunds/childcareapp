<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/contact_view_firstname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="First Name"/>

            <TextView
                android:id="@+id/contact_view_lastname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Last Name"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/phoneNumber"/>

    <TextView
        android:id="@+id/contact_view_phonenumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Phone Number"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/address"/>

    <TextView
        android:id="@+id/contact_view_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Address"/>

    <TextView
        android:id="@+id/contact_view_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="City"/>

    <TextView
        android:id="@+id/contact_view_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="State"/>

    <TextView
        android:id="@+id/contact_view_zip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Zip Code"/>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#99ff99"
        android:id="@+id/contact_view_imageView" />
</LinearLayout>