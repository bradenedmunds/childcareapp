<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please set the preferred days:"/>
        <CheckBox
            android:id="@+id/mondayCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monday"
            android:clickable="true"
            android:checked="true"
            android:hint="Checked"/>
        <CheckBox
            android:id="@+id/tuesdayCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tuesday"
            android:clickable="true"
            android:checked="true"
            android:gravity="right"
            android:hint="Checked"/>
        <CheckBox
            android:id="@+id/wednesdayCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wednesday"
            android:clickable="true"
            android:checked="true"
            android:hint="Checked"/>
        <CheckBox
            android:id="@+id/thursdayCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thursday"
            android:clickable="true"
            android:checked="true"
            android:hint="Checked"/>
        <CheckBox
            android:id="@+id/fridayCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Friday"
            android:clickable="true"
            android:checked="true"
            android:hint="Checked"/>
        <CheckBox
            android:id="@+id/saturdayCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Saturday"
            android:clickable="true"
            android:checked="true"
            android:hint="Checked"/>
        <CheckBox
            android:id="@+id/sundayCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sunday"
            android:clickable="true"
            android:checked="true"
            android:hint="Checked"/>
        <Button
            android:id="@+id/setAvailabilityButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set Availabilty"/>

</LinearLayout>